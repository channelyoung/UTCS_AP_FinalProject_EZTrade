<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/oneListingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.OneListingFragment"
    android:clickable="true">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.viewpager.widget.ViewPager>

    <ImageView
        android:id="@+id/favIV_one"
        app:layout_constraintTop_toTopOf="@id/viewPager"
        app:layout_constraintEnd_toEndOf="@+id/viewPager"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_favorite_border_black_24dp" />

    <TextView
        android:id="@+id/titleTV_one"
        app:layout_constraintTop_toBottomOf="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="" />

    <TextView
        android:id="@+id/userTV_one"
        app:layout_constraintTop_toBottomOf="@+id/titleTV_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/detail_one"
        app:layout_constraintTop_toBottomOf="@+id/userTV_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="" />
</androidx.constraintlayout.widget.ConstraintLayout>